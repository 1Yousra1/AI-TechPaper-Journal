<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="20dp"
    android:layout_marginVertical="24dp"
    android:layout_marginHorizontal="50dp">

    <TextView
        android:id="@+id/dialog_prompt"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Upload Paper"
        android:textColor="@color/brown"
        android:fontFamily="@font/playfair_display_semibold"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="18dp" />

    <TextView
        android:id="@+id/title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/brown"
        android:fontFamily="@font/playfair_display_semibold"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="start"
        android:layout_gravity="start"/>

    <EditText
        android:id="@+id/title_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:autofillHints="Title"
        android:inputType="text"
        android:hint="Enter Title"
        android:textColor="@color/brown"
        android:textSize="16sp"
        android:fontFamily="@font/playfair_display_semibold"/>

    <TextView
        android:id="@+id/author_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author(s)"
        android:textColor="@color/brown"
        android:fontFamily="@font/playfair_display_semibold"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="start"
        android:layout_gravity="start"/>

    <EditText
        android:id="@+id/author_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:autofillHints="Title"
        android:inputType="text"
        android:hint="Enter Author(s)"
        android:textColor="@color/brown"
        android:textSize="19sp"
        android:fontFamily="@font/playfair_display_semibold"/>

    <TextView
        android:id="@+id/date_published_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Published"
        android:textColor="@color/brown"
        android:fontFamily="@font/playfair_display_semibold"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="start"
        android:layout_gravity="start"/>

    <EditText
        android:id="@+id/date_published_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:autofillHints="Title"
        android:inputType="date"
        android:hint="MM/YYYY"
        android:textColor="@color/brown"
        android:textSize="16sp"
        android:fontFamily="@font/playfair_display_semibold"/>

    <TextView
        android:id="@+id/topics_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Topic(s)"
        android:textColor="@color/brown"
        android:fontFamily="@font/playfair_display_semibold"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="start"
        android:layout_gravity="start"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/dream_type_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        app:flexWrap="wrap"
        app:justifyContent="flex_start"
        app:alignItems="center"
        app:flexDirection="row">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingTop="3dp"
            android:text="Science"
            android:textColor="@color/beige"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="@drawable/topic_tag_background"/>
    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_entry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_gravity="center"
        android:text="Upload Paper"
        android:letterSpacing="-.001"
        android:textSize="16sp"
        android:fontFamily="@font/playfair_display_bold"
        android:textColor="@color/brown"
        android:backgroundTint="@color/white"
        android:elevation="20dp"
        app:elevation="20dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/brown"
        app:cornerRadius="5dp" />
</LinearLayout>