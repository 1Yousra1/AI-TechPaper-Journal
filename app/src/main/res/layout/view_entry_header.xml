<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bckg_pages_header"
    android:paddingBottom="15dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/gridview_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight=".2"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:src="@drawable/ic_gridview"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/page_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:text="About"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/beige"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight=".2"
            android:padding="2dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <TextView
        android:id="@+id/paper_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/playfair_display_bold"
        android:text="Paper Title"
        android:textAlignment="center"
        android:textColor="@color/brown"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/paper_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/poppins_medium"
        android:text="First Last, First Last"
        android:textAlignment="center"
        android:textColor="@color/beige"
        android:textSize="14sp"
        android:visibility="gone" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/paper_topics_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        app:flexWrap="wrap"
        app:justifyContent="center"
        app:alignItems="center"
        app:flexDirection="row"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:paddingHorizontal="10dp"
            android:paddingTop="3dp"
            android:gravity="center"
            android:text="Topic1"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/beige"
            android:background="@drawable/bckg_topic_tag"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:paddingHorizontal="10dp"
            android:paddingTop="3dp"
            android:gravity="center"
            android:text="Topic2"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/beige"
            android:background="@drawable/bckg_topic_tag"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:paddingHorizontal="10dp"
            android:paddingTop="3dp"
            android:gravity="center"
            android:text="Topic3"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/beige"
            android:background="@drawable/bckg_topic_tag"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingTop="3dp"
            android:gravity="center"
            android:text="+4"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/beige"
            android:background="@drawable/bckg_topic_tag"/>
    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout>