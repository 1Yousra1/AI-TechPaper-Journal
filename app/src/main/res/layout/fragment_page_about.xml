<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SCROLLER_ID">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/details_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/playfair_display_bold"
            android:text="Details"
            android:textColor="@color/brown"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date_published_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Date Published: "
            android:textColor="@color/brown"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_label" />

        <TextView
            android:id="@+id/date_published"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="June 2010"
            android:textColor="@color/beige"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/date_published_label"
            app:layout_constraintStart_toEndOf="@+id/date_published_label"
            app:layout_constraintTop_toTopOf="@+id/date_published_label" />

        <TextView
            android:id="@+id/page_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Page Count:"
            android:textColor="@color/brown"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_published_label" />

        <TextView
            android:id="@+id/page_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="5 pages"
            android:textColor="@color/beige"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/page_number_label"
            app:layout_constraintStart_toEndOf="@id/page_number_label"
            app:layout_constraintTop_toTopOf="@+id/page_number_label" />

        <LinearLayout
            android:id="@+id/open_paper_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/page_number_label"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_pdf"
                android:elevation="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:paddingVertical="1dp"
                android:background="@drawable/bckg_input"
                android:fontFamily="@font/poppins"
                android:text="Open"
                android:textAlignment="center"
                android:textColor="@color/beige"
                android:textSize="11dp"
                android:elevation="5dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/summary_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/playfair_display_bold"
            android:text="Summary"
            android:textColor="@color/brown"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/page_number_label" />

        <TextView
            android:id="@+id/paper_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="60dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:text="This is a summary of the paper. This is the summary of the paper. Lorem ipsum odor amet, consectetuer adipiscing elit. Congue blandit eget donec lacinia accumsan. Tempus at aptent tempor non massa ipsum sociosqu. Sollicitudin sodales congue cubilia, praesent vestibulum ex eros sem. Magnis euismod tincidunt sociosqu elementum dapibus est quisque; litora conubia. Lobortis urna amet taciti maecenas senectus velit accumsan. Blandit dui pretium curae id platea fusce. Etiam faucibus venenatis cubilia blandit ante eget sed vulputate. Montes curae sit turpis sed fusce vehicula accumsan accumsan finibus. Commodo aliquet montes parturient gravida mus tincidunt netus diam. Magnis euismod tincidunt sociosqu elementum dapibus est quisque; litora conubia. Lobortis urna amet taciti maecenas senectus velit accumsan. Blandit dui pretium curae id platea fusce. Etiam faucibus venenatis cubilia blandit ante eget sed vulputate. Montes curae sit turpis sed fusce vehicula accumsan accumsan finibus. Commodo aliquet montes parturient gravida mus tincidunt netus diam. Magnis euismod tincidunt sociosqu elementum dapibus est quisque; litora conubia. Lobortis urna amet taciti maecenas senectus velit accumsan. Blandit dui pretium curae id platea fusce. Etiam faucibus venenatis cubilia blandit ante eget sed vulputate. Montes curae sit turpis sed fusce vehicula accumsan accumsan finibus. Commodo aliquet montes parturient gravida mus tincidunt netus diam."
            android:textAlignment="textStart"
            android:textColor="@color/brown"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/summary_label"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>