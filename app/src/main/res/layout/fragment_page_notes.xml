<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <jp.wasabeef.richeditor.RichEditor
        android:id="@+id/notes_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:background="@color/beige"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/action_back"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="13dp"
                android:background="@drawable/bckg_editor"
                android:contentDescription="@string/editor_back"
                android:scaleType="fitCenter"
                android:src="@drawable/editor_back" />

            <ImageButton
                android:id="@+id/action_undo"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="13dp"
                android:background="@drawable/bckg_editor"
                android:contentDescription="@string/editor_undo"
                android:scaleType="fitCenter"
                android:src="@drawable/editor_undo" />

            <ImageButton
                android:id="@+id/action_redo"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="13dp"
                android:background="@drawable/bckg_editor"
                android:contentDescription="@string/editor_redo"
                android:scaleType="fitCenter"
                android:src="@drawable/editor_redo" />

            <ImageButton
                android:id="@+id/action_edit"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="13dp"
                android:background="@drawable/bckg_editor"
                android:contentDescription="@string/editor_edit"
                android:scaleType="fitCenter"
                android:src="@drawable/editor_edit" />

            <ImageButton
                android:id="@+id/action_erase"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="13dp"
                android:background="@drawable/bckg_editor"
                android:contentDescription="@string/editor_erase"
                android:scaleType="fitCenter"
                android:src="@drawable/editor_erase" />

            <ImageButton
                android:id="@+id/action_bold"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="15dp"
                android:background="@drawable/bckg_editor"
                android:contentDescription="@string/editor_bold"
                android:scaleType="fitCenter"
                android:src="@drawable/editor_bold" />

            <ImageButton
                android:id="@+id/action_italic"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="15dp"
                android:background="@drawable/bckg_editor"
                android:contentDescription="@string/editor_italic"
                android:scaleType="fitCenter"
                android:src="@drawable/editor_italic" />

            <ImageButton
