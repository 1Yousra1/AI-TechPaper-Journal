            <ImageButton
                android:id="@+id/action_insert_bullets"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="13dp"
                android:background="@drawable/bckg_editor"
                android:contentDescription="@string/editor_bullets"
                android:scaleType="fitCenter"
                android:src="@drawable/editor_bullets" />

            <ImageButton
                android:id="@+id/action_insert_numbers"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="13dp"
                android:background="@drawable/bckg_editor"
                android:contentDescription="@string/editor_numbers"
                android:scaleType="fitCenter"
                android:src="@drawable/editor_numbers" />

            <ImageButton
                android:id="@+id/action_blockquote"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="15dp"
                android:background="@drawable/bckg_editor"
                android:contentDescription="@string/editor_blockquote"
                android:scaleType="fitCenter"
                android:src="@drawable/editor_blockquote" />

            <ImageButton
                android:id="@+id/action_insert_link"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="13dp"
                android:background="@drawable/bckg_editor"
                android:contentDescription="@string/editor_link"
                android:scaleType="fitCenter"
