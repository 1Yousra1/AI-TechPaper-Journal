                android:padding="13dp"
                android:background="@drawable/bckg_editor"
                android:contentDescription="@string/editor_heading3"
                android:scaleType="fitCenter"
                android:src="@drawable/editor_heading3" />

            <ImageButton
                android:id="@+id/action_heading4"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="13dp"
                android:background="@drawable/bckg_editor"
                android:contentDescription="@string/editor_heading4"
                android:scaleType="fitCenter"
                android:src="@drawable/editor_heading4" />

            <ImageButton
                android:id="@+id/action_heading5"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="13dp"
                android:background="@drawable/bckg_editor"
                android:contentDescription="@string/editor_heading5"
                android:scaleType="fitCenter"
                android:src="@drawable/editor_heading5" />

            <ImageButton
                android:id="@+id/action_heading6"
                android:layout_width="52dp"
